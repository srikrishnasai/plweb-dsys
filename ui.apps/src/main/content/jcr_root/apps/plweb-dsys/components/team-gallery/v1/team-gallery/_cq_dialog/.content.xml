<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Team Gallery"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[plweb-dsys.author.checkbox-show-hide-multifield]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <general
                        jcr:primaryType="nt:unstructured"
                        jcr:title="General"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Title"
                                        name="./title"/>
                                    <description
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Description"
                                        name="./desc"/>
                                    <text-color
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        class="cq-dialog-dropdown-showhide"
                                        fieldLabel="Text Color"
                                        name="./color">
                                        <items jcr:primaryType="cq:WidgetCollection">
                                            <teal
                                                jcr:primaryType="nt:unstructured"
                                                text="Teal Color (#108188)"
                                                value="tealColor"/>
                                            <blue
                                                jcr:primaryType="nt:unstructured"
                                                text="Blue Color (#005EAD)"
                                                value="blueColor"/>
                                        </items>
                                    </text-color>
                                    <team
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        eaem-nested=""
                                        fieldDescription="Click 'Add field' to add a new team member"
                                        fieldLabel="Team member">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./galleryItems">
                                            <items jcr:primaryType="nt:unstructured">
                                                <peopleConfig
                                                    jcr:primaryType="nt:unstructured"
                                                    jcr:title="Edit employees"
                                                    sling:resourceType="granite/ui/components/foundation/layouts/collapsible">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <logo
                                                            jcr:primaryType="nt:unstructured"
                                                            jcr:title="Image"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            margin="{Boolean}true">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <column
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <logo
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                            allowUpload="{Boolean}false"
                                                                            autoStart="{Boolean}false"
                                                                            class="cq-droptarget"
                                                                            fieldLabel="Image"
                                                                            fileNameParameter="./fileName"
                                                                            mimeTypes="[image]"
                                                                            multiple="{Boolean}false"
                                                                            name="./file"
                                                                            required="{Boolean}true"
                                                                            title="Upload Image Asset"
                                                                            uploadUrl="${suffix.path}"
                                                                            useHTML5="{Boolean}true"/>
                                                                        <showImageFromDam
                                                                            granite:class="cq-dialog-showhide-checkbox-multifield"
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                            checked="{Boolean}false"
                                                                            fieldDescription="This will load the Original images"
                                                                            name="./useOriginalImage"
                                                                            text="Use Original Images"
                                                                            value="true">
                                                                            <granite:data
                                                                                jcr:primaryType="nt:unstructured"
                                                                                cq-dialog-showhide-checkbox-multifield-target=".checkbox-showhide-multi"/>
                                                                        </showImageFromDam>
                                                                        <showTransparentImage
                                                                            granite:class="checkbox-showhide-multi"
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                            checked="{Boolean}false"
                                                                            fieldDescription="This will load the transparent images"
                                                                            name="./useTransparentImage"
                                                                            text="Use Transparent Images"
                                                                            value="true">
                                                                            <granite:data
                                                                                jcr:primaryType="nt:unstructured"
                                                                                showhidetargetvalue=""/>
                                                                        </showTransparentImage>
                                                                    </items>
                                                                </column>
                                                            </items>
                                                        </logo>
                                                        <name
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Name"
                                                            name="./employeeName"
                                                            required="{Boolean}true"/>
                                                        <designation
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Designation"
                                                            name="./position"
                                                            required="{Boolean}true"/>
                                                        <description
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Description"
                                                            name="./description"/>
                                                        <link
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                            fieldDescription="Select path of the target page"
                                                            fieldLabel="Target Link"
                                                            name="./linkTarget"
                                                            rootPath="/content"/>
                                                        <target
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            fieldDescription="Check this checkbox to open the link in new tab."
                                                            name="./openInNewTab"
                                                            text="Open Link in New Tab"
                                                            value="true"/>
                                                    </items>
                                                </peopleConfig>
                                            </items>
                                        </field>
                                    </team>
                                </items>
                            </column>
                        </items>
                    </general>
                    <authControl
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="plweb-dsys/common/authcontrol/cq:dialog/content/items/tabs/items/authControl"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
