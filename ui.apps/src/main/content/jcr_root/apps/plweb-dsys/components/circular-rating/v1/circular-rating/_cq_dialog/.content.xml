<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Circular Rating"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-list--editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <circularRatings
                jcr:primaryType="nt:unstructured"
                jcr:title="Circular Rating"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <ratingText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter the Rating grades."
                                fieldLabel="Rating"
                                name="./ratingText"/>
                            <ratingTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Label"
                                name="./ratingTitle"/>
                            <color
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="Choose the color for the circular background and the Rating Title."
                                fieldLabel="Color"
                                name="./circularRatingColor">
                                <items jcr:primaryType="nt:unstructured">
                                    <turquoise
                                        jcr:primaryType="nt:unstructured"
                                        text="Turquoise (#24c5cf)"
                                        value="turquoise"/>
                                    <deepBlue
                                        jcr:primaryType="nt:unstructured"
                                        text="Deep Blue (#004685)"
                                        value="#004685"/>
                                    <brightBlue
                                        jcr:primaryType="nt:unstructured"
                                        text="Bright Blue (#008ed7)"
                                        value="#008ed7"/>
                                    <indigo
                                        jcr:primaryType="nt:unstructured"
                                        text="Indigo (#6610f2)"
                                        value="indigo"/>
                                    <purple
                                        jcr:primaryType="nt:unstructured"
                                        text="Purple (#6f42c1)"
                                        value="purple"/>
                                    <pink
                                        jcr:primaryType="nt:unstructured"
                                        text="Pink (#e83e8c)"
                                        value="pink"/>
                                    <red
                                        jcr:primaryType="nt:unstructured"
                                        text="Red (#dc3545)"
                                        value="red"/>
                                    <orange
                                        jcr:primaryType="nt:unstructured"
                                        text="Orage (#fd7e14)"
                                        value="orange"/>
                                    <yellow
                                        jcr:primaryType="nt:unstructured"
                                        text="Yellow (#ffc107)"
                                        value="yellow"/>
                                    <green
                                        jcr:primaryType="nt:unstructured"
                                        text="Green (#28a745)"
                                        value="green"/>
                                </items>
                            </color>
                            <ratingCircleSize
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldDescription="Choose the size for the circular background rating."
                                fieldLabel="Rating Circle Size"
                                name="./circularRatingSize">
                                <items jcr:primaryType="nt:unstructured">
                                    <small
                                        jcr:primaryType="nt:unstructured"
                                        text="Small"
                                        value="small"/>
                                    <medium
                                        jcr:primaryType="nt:unstructured"
                                        text="Medium"
                                        value="medium"/>
                                    <large
                                        jcr:primaryType="nt:unstructured"
                                        text="Large"
                                        value="large"/>
                                </items>
                            </ratingCircleSize>
                        </items>
                    </column>
                </items>
            </circularRatings>
        </items>
    </content>
</jcr:root>
