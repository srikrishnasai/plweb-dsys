<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Section Container"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-list--editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <desktop
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Desktop"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <topSpacing
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Top Spacing"
                                        name="./desktopTop">
                                        <items jcr:primaryType="nt:unstructured">
                                            <no-spacing
                                                jcr:primaryType="nt:unstructured"
                                                text="No Spacing"
                                                value="no-space"/>
                                            <very-small
                                                jcr:primaryType="nt:unstructured"
                                                text="Very Small - 16px"
                                                value="verySmall"/>
                                            <small
                                                jcr:primaryType="nt:unstructured"
                                                text="Small - 32px"
                                                value="small"/>
                                            <medium
                                                jcr:primaryType="nt:unstructured"
                                                text="Medium - 64px"
                                                value="medium"/>
                                            <large
                                                jcr:primaryType="nt:unstructured"
                                                text="Large - 80px"
                                                value="large"/>
                                            <extralarge
                                                jcr:primaryType="nt:unstructured"
                                                text="Extra Large - 160px"
                                                value="extralarge"/>
                                        </items>
                                    </topSpacing>
                                    <bottomSpacing
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Bottom Spacing"
                                        name="./desktopBottom">
                                        <items jcr:primaryType="nt:unstructured">
                                            <no-spacing
                                                jcr:primaryType="nt:unstructured"
                                                text="No Spacing"
                                                value="no-space"/>
                                            <very-small
                                                jcr:primaryType="nt:unstructured"
                                                text="Very Small - 16px"
                                                value="verySmall"/>
                                            <small
                                                jcr:primaryType="nt:unstructured"
                                                text="Small - 32px"
                                                value="small"/>
                                            <medium
                                                jcr:primaryType="nt:unstructured"
                                                text="Medium - 64px"
                                                value="medium"/>
                                            <large
                                                jcr:primaryType="nt:unstructured"
                                                text="Large - 80px"
                                                value="large"/>
                                            <extralarge
                                                jcr:primaryType="nt:unstructured"
                                                text="Extra Large - 160px"
                                                value="extralarge"/>
                                        </items>
                                    </bottomSpacing>
                                    <isFullScreenToggle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="Removes the default left and right spacing added to the component container"
                                        name="./removeSpaceDesktop"
                                        text="Full Screen"
                                        value="true"/>
                                    <bgColor
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Background Color"
                                        name="./desktopBgColor">
                                        <items jcr:primaryType="nt:unstructured">
                                            <transparent
                                                jcr:primaryType="nt:unstructured"
                                                text="Transparent"
                                                value="transparent"/>
                                            <white
                                                jcr:primaryType="nt:unstructured"
                                                text="White"
                                                value="white"/>
                                            <light-grey
                                                jcr:primaryType="nt:unstructured"
                                                text="Light Grey"
                                                value="light-grey"/>
                                        </items>
                                    </bgColor>
                                </items>
                            </column>
                        </items>
                    </desktop>
                    <tablets
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Tablets"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <topSpacing
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Top Spacing"
                                        name="./tabletTop">
                                        <items jcr:primaryType="nt:unstructured">
                                            <no-spacing
                                                jcr:primaryType="nt:unstructured"
                                                text="No Spacing"
                                                value="no-space"/>
                                            <very-small
                                                jcr:primaryType="nt:unstructured"
                                                text="Very Small - 16px"
                                                value="verySmall"/>
                                            <small
                                                jcr:primaryType="nt:unstructured"
                                                text="Small - 32px"
                                                value="small"/>
                                            <medium
                                                jcr:primaryType="nt:unstructured"
                                                text="Medium - 64px"
                                                value="medium"/>
                                            <large
                                                jcr:primaryType="nt:unstructured"
                                                text="Large - 80px"
                                                value="large"/>
                                            <extralarge
                                                jcr:primaryType="nt:unstructured"
                                                text="Extra Large - 160px"
                                                value="extralarge"/>
                                        </items>
                                    </topSpacing>
                                    <bottomSpacing
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Bottom Spacing"
                                        name="./tabletBottom">
                                        <items jcr:primaryType="nt:unstructured">
                                            <no-spacing
                                                jcr:primaryType="nt:unstructured"
                                                text="No Spacing"
                                                value="no-space"/>
                                            <very-small
                                                jcr:primaryType="nt:unstructured"
                                                text="Very Small - 16px"
                                                value="verySmall"/>
                                            <small
                                                jcr:primaryType="nt:unstructured"
                                                text="Small - 32px"
                                                value="small"/>
                                            <medium
                                                jcr:primaryType="nt:unstructured"
                                                text="Medium - 64px"
                                                value="medium"/>
                                            <large
                                                jcr:primaryType="nt:unstructured"
                                                text="Large - 80px"
                                                value="large"/>
                                            <extralarge
                                                jcr:primaryType="nt:unstructured"
                                                text="Extra Large - 160px"
                                                value="extralarge"/>
                                        </items>
                                    </bottomSpacing>
                                    <isFullScreenToggle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="Removes the default left and right spacing added to the component container"
                                        name="./removeSpaceTablets"
                                        text="Full Screen"
                                        value="true"/>
                                    <bgColor
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Background Color"
                                        name="./tabletBgColor">
                                        <items jcr:primaryType="nt:unstructured">
                                            <transparent
                                                jcr:primaryType="nt:unstructured"
                                                text="Transparent"
                                                value="transparent"/>
                                            <white
                                                jcr:primaryType="nt:unstructured"
                                                text="White"
                                                value="white"/>
                                            <light-grey
                                                jcr:primaryType="nt:unstructured"
                                                text="Light Grey"
                                                value="light-grey"/>
                                        </items>
                                    </bgColor>
                                </items>
                            </column>
                        </items>
                    </tablets>
                    <mobile
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Mobile"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <topSpacing
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Top Spacing"
                                        name="./mobileTop">
                                        <items jcr:primaryType="nt:unstructured">
                                            <no-spacing
                                                jcr:primaryType="nt:unstructured"
                                                text="No Spacing"
                                                value="no-space"/>
                                            <very-small
                                                jcr:primaryType="nt:unstructured"
                                                text="Very Small - 16px"
                                                value="verySmall"/>
                                            <small
                                                jcr:primaryType="nt:unstructured"
                                                text="Small - 32px"
                                                value="small"/>
                                            <medium
                                                jcr:primaryType="nt:unstructured"
                                                text="Medium - 64px"
                                                value="medium"/>
                                            <large
                                                jcr:primaryType="nt:unstructured"
                                                text="Large - 80px"
                                                value="large"/>
                                            <extralarge
                                                jcr:primaryType="nt:unstructured"
                                                text="Extra Large - 160px"
                                                value="extralarge"/>
                                        </items>
                                    </topSpacing>
                                    <bottomSpacing
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Bottom Spacing"
                                        name="./mobileBottom">
                                        <items jcr:primaryType="nt:unstructured">
                                            <no-spacing
                                                jcr:primaryType="nt:unstructured"
                                                text="No Spacing"
                                                value="no-space"/>
                                            <very-small
                                                jcr:primaryType="nt:unstructured"
                                                text="Very Small - 16px"
                                                value="verySmall"/>
                                            <small
                                                jcr:primaryType="nt:unstructured"
                                                text="Small - 32px"
                                                value="small"/>
                                            <medium
                                                jcr:primaryType="nt:unstructured"
                                                text="Medium - 64px"
                                                value="medium"/>
                                            <large
                                                jcr:primaryType="nt:unstructured"
                                                text="Large - 80px"
                                                value="large"/>
                                            <extralarge
                                                jcr:primaryType="nt:unstructured"
                                                text="Extra Large - 160px"
                                                value="extralarge"/>
                                        </items>
                                    </bottomSpacing>
                                    <isFullScreenToggle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="Removes the default left and right spacing added to the component container"
                                        name="./removeSpaceMobile"
                                        text="Full Screen"
                                        value="true"/>
                                    <bgColor
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Background Color"
                                        name="./mobileBgColor">
                                        <items jcr:primaryType="nt:unstructured">
                                            <transparent
                                                jcr:primaryType="nt:unstructured"
                                                text="Transparent"
                                                value="transparent"/>
                                            <white
                                                jcr:primaryType="nt:unstructured"
                                                text="White"
                                                value="white"/>
                                            <light-grey
                                                jcr:primaryType="nt:unstructured"
                                                text="Light Grey"
                                                value="light-grey"/>
                                        </items>
                                    </bgColor>
                                </items>
                            </column>
                        </items>
                    </mobile>
                    <animate
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Animation"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <animation
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Animation"
                                                name="./animation">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <default
                                                        jcr:primaryType="nt:unstructured"
                                                        text="None"
                                                        value="none"/>
                                                    <fadeIn
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Fade In"
                                                        value="fadeIn"/>
                                                    <slideGrowUp
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Slide  Up"
                                                        value="slideGrowUp"/>
                                                    <fadeInUp
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Fade In and Slide Up"
                                                        value="fadeInUp-100"/>
                                                    <fadeGrowUp
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Fade In &amp; Scale Up"
                                                        value="fadeGrowUp"/>
                                                    <fadeSlideGrowUp
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Fade In &amp; Scale Up &amp; Slide Up"
                                                        value="fadeSlideGrowUp"/>
                                                </items>
                                            </animation>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </animate>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
