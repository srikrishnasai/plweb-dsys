<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    cq:actions="[text: Flexible Image,-,edit,-,delete,-,insert,-,copymove]"
    cq:disableTargeting="{Boolean}true"
    cq:layout="editbar"
    jcr:primaryType="cq:EditConfig">
    <cq:dropTargets jcr:primaryType="nt:unstructured">
        <large
            jcr:primaryType="cq:DropTargetConfig"
            sling:resourceType="wcm/foundation/components/image"
            accept="[image/.*]"
            groups="[media]"
            propertyName="./image/large/fileReference">
            <parameters
                jcr:primaryType="nt:unstructured"
                sling:resourceType="plweb-dsys/components/content/adaptiveImage">
                <large
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/foundation/components/image"/>
            </parameters>
        </large>
        <medium
            jcr:primaryType="cq:DropTargetConfig"
            accept="[image/.*]"
            groups="[media]"
            propertyName="./image/medium/fileReference">
            <parameters
                jcr:primaryType="nt:unstructured"
                sling:resourceType="plweb-dsys/components/content/adaptiveImage">
                <medium
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/foundation/components/image"/>
            </parameters>
        </medium>
        <small
            jcr:primaryType="cq:DropTargetConfig"
            accept="[image/.*]"
            groups="[media]"
            propertyName="./image/small/fileReference">
            <parameters
                jcr:primaryType="nt:unstructured"
                sling:resourceType="plweb-dsys/components/content/adaptiveImage">
                <small
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/foundation/components/image"/>
            </parameters>
        </small>
    </cq:dropTargets>
    <cq:inplaceEditing
        jcr:primaryType="cq:InplaceEditingConfig"
        active="{Boolean}true"
        editorType="hybrid">
        <cq:childEditors jcr:primaryType="nt:unstructured">
            <large
                jcr:primaryType="cq:ChildEditorConfig"
                title="Large Image"
                type="image"/>
            <medium
                jcr:primaryType="cq:ChildEditorConfig"
                title="Medium Image"
                type="image"/>
            <small
                jcr:primaryType="cq:ChildEditorConfig"
                title="Small Image"
                type="image"/>
        </cq:childEditors>
        <config jcr:primaryType="nt:unstructured">
            <large jcr:primaryType="nt:unstructured">
                <plugins jcr:primaryType="nt:unstructured">
                    <crop
                        jcr:primaryType="nt:unstructured"
                        features="*">
                        <aspectRatios jcr:primaryType="nt:unstructured">
                            <squareCrop
                                jcr:primaryType="nt:unstructured"
                                name="1:1 Crop"
                                ratio="1"/>
                            <crop1
                                jcr:primaryType="nt:unstructured"
                                name="3:1 Crop"
                                ratio="0.334"/>
                            <crop2
                                jcr:primaryType="nt:unstructured"
                                name="3:2 Crop"
                                ratio="0.6667"/>
                            <crop3
                                jcr:primaryType="nt:unstructured"
                                name="4:3 Crop"
                                ratio="0.7500"/>
                            <crop4
                                jcr:primaryType="nt:unstructured"
                                name="3:4 Crop"
                                ratio="1.3334"/>
                            <crop5
                                jcr:primaryType="nt:unstructured"
                                name="16:9 Crop"
                                ratio="0.5625"/>
                            <crop6
                                jcr:primaryType="nt:unstructured"
                                name="9:16 Crop"
                                ratio="1.7778"/>
                        </aspectRatios>
                    </crop>
                </plugins>
            </large>
            <medium jcr:primaryType="nt:unstructured">
                <plugins jcr:primaryType="nt:unstructured">
                    <crop
                        jcr:primaryType="nt:unstructured"
                        features="*">
                        <aspectRatios jcr:primaryType="nt:unstructured">
                            <squareCrop
                                jcr:primaryType="nt:unstructured"
                                name="1:1 Crop"
                                ratio="1"/>
                            <crop1
                                jcr:primaryType="nt:unstructured"
                                name="3:1 Crop"
                                ratio="0.334"/>
                            <crop2
                                jcr:primaryType="nt:unstructured"
                                name="3:2 Crop"
                                ratio="0.6667"/>
                            <crop3
                                jcr:primaryType="nt:unstructured"
                                name="4:3 Crop"
                                ratio="0.7500"/>
                            <crop4
                                jcr:primaryType="nt:unstructured"
                                name="3:4 Crop"
                                ratio="1.3334"/>
                            <crop5
                                jcr:primaryType="nt:unstructured"
                                name="16:9 Crop"
                                ratio="0.5625"/>
                            <crop6
                                jcr:primaryType="nt:unstructured"
                                name="9:16 Crop"
                                ratio="1.7778"/>
                        </aspectRatios>
                    </crop>
                </plugins>
            </medium>
            <small jcr:primaryType="nt:unstructured">
                <plugins jcr:primaryType="nt:unstructured">
                    <crop
                        jcr:primaryType="nt:unstructured"
                        features="*">
                        <aspectRatios jcr:primaryType="nt:unstructured">
                            <squareCrop
                                jcr:primaryType="nt:unstructured"
                                name="1:1 Crop"
                                ratio="1"/>
                            <crop1
                                jcr:primaryType="nt:unstructured"
                                name="3:1 Crop"
                                ratio="0.334"/>
                            <crop2
                                jcr:primaryType="nt:unstructured"
                                name="3:2 Crop"
                                ratio="0.6667"/>
                            <crop3
                                jcr:primaryType="nt:unstructured"
                                name="4:3 Crop"
                                ratio="0.7500"/>
                            <crop4
                                jcr:primaryType="nt:unstructured"
                                name="3:4 Crop"
                                ratio="1.3334"/>
                            <crop5
                                jcr:primaryType="nt:unstructured"
                                name="16:9 Crop"
                                ratio="0.5625"/>
                            <crop6
                                jcr:primaryType="nt:unstructured"
                                name="9:16 Crop"
                                ratio="1.7778"/>
                        </aspectRatios>
                    </crop>
                </plugins>
            </small>
        </config>
    </cq:inplaceEditing>
    <cq:listeners
        jcr:primaryType="cq:EditListenersConfig"
        afteredit="REFRESH_PAGE"/>
</jcr:root>
