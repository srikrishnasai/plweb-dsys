<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Troika"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[plweb-dsys.author.checkbox-show-hide, plweb-dsys.author.tabs-show-hide]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <general
                        jcr:primaryType="nt:unstructured"
                        jcr:title="General"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <generalTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Enter heading text"
                                        fieldLabel="Main Title"
                                        name="./generalTitle"/>
                                    <desciption
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                        name="./generalDescription"
                                        useFixedInlineToolbar="{Boolean}true">
                                        <rtePlugins
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="plweb-dsys/common/commonRTE/v1/commonRTE/cq:dialog/content/items/column/items/richText/rtePlugins"/>
                                        <uiSettings
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="plweb-dsys/common/commonRTE/v1/commonRTE/cq:dialog/content/items/column/items/richText/uiSettings"/>
                                    </desciption>
                                    <disableImage
                                        granite:class="cq-dialog-checkbox-showhide"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="Click the checkbox to use Troika component without image"
                                        name="./disableImage"
                                        text="Use Troika Without Image"
                                        value="true">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            cq-dialog-checkbox-showhide-target=".disable-animation-showhide-target"/>
                                    </disableImage>
                                    <troikaPosition
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Choose the position of the troika"
                                        fieldLabel="Troika Position"
                                        name="./troikaPosition">
                                        <items jcr:primaryType="nt:unstructured">
                                            <left
                                                jcr:primaryType="nt:unstructured"
                                                text="Left"
                                                value="left"/>
                                            <center
                                                jcr:primaryType="nt:unstructured"
                                                text="Center"
                                                value="center"/>
                                        </items>
                                    </troikaPosition>
                                    <numberOfTroika
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        granite:class="tabs__show-hide"
                                        fieldDescription="Choose the number of troika"
                                        fieldLabel="Number Of Troika"
                                        name="./numberOfTroika">
                                        <items jcr:primaryType="nt:unstructured">
                                            <one
                                                jcr:primaryType="nt:unstructured"
                                                text="One"
                                                value="1"/>
                                            <two
                                                jcr:primaryType="nt:unstructured"
                                                text="Two"
                                                value="2"/>
                                            <three
                                                jcr:primaryType="nt:unstructured"
                                                text="Three"
                                                value="3"/>
                                        </items>
                                    </numberOfTroika>
                                </items>
                            </column>
                        </items>
                    </general>
                    <troikaSection1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Troika Section1"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <granite:data jcr:primaryType="nt:unstructured"
                              dep-value="1,2,3"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Enter section1 title text"
                                        fieldLabel="Troika Title"
                                        name="./section1Title"/>
                                    <desciption
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                        name="./section1Description"
                                        useFixedInlineToolbar="{Boolean}true">
                                        <rtePlugins
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="plweb-dsys/common/commonRTE/v1/commonRTE/cq:dialog/content/items/column/items/richText/rtePlugins"/>
                                        <uiSettings
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="plweb-dsys/common/commonRTE/v1/commonRTE/cq:dialog/content/items/column/items/richText/uiSettings"/>
                                    </desciption>
                                    <webpageName
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter link name"
                                        fieldLabel="Webpage Title"
                                        name="./section1WebpageTitle"/>
                                    <webpageTarget
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                        fieldDescription="Select path of the target page"
                                        fieldLabel="Webpage Target"
                                        name="./section1webpageTarget"
                                        rootPath="/content"/>
                                    <linkTabTarget
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        checked="{Boolean}false"
                                        fieldDescription="Check this checkbox to open the link in new tab."
                                        name="./section1webpageTabTarget"
                                        text="Open Link in New Tab"
                                        value="true"/>
                                    <section1Image
                                        granite:class="disable-animation-showhide-target"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        showhidetargetvalue="true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <section1Image
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldLabel="Troika Image"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./section1Image"
                                                name="./file"
                                                mimeTypes="[image]"
                                                multiple="{Boolean}false"  
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                        </items>
                                    </section1Image>
                                </items>
                            </column>
                        </items>
                    </troikaSection1>
                    <troikaSection2
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Troika Section2"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <granite:data jcr:primaryType="nt:unstructured"
                              dep-value="2,3"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Enter troika title"
                                        fieldLabel="Troika Title"
                                        name="./section2Title"/>
                                    <desciption
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                        name="./section2Description"
                                        useFixedInlineToolbar="{Boolean}true">
                                        <rtePlugins
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="plweb-dsys/common/commonRTE/v1/commonRTE/cq:dialog/content/items/column/items/richText/rtePlugins"/>
                                        <uiSettings
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="plweb-dsys/common/commonRTE/v1/commonRTE/cq:dialog/content/items/column/items/richText/uiSettings"/>
                                    </desciption>
                                    <webpageName
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter link name"
                                        fieldLabel="Webpage Title"
                                        name="./section2WebpageTitle"/>
                                    <webpageTarget
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                        fieldDescription="Select path of the target page"
                                        fieldLabel="Webpage Target"
                                        name="./section2WebpageTarget"
                                        rootPath="/content"/>
                                    <webpageTabTarget
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        checked="{Boolean}false"
                                        fieldDescription="Check this checkbox to open the link in new tab."
                                        name="./section2WebpageTabTarget"
                                        text="Open Link in New Tab"
                                        value="true"/>
                                    <section2Image
                                        granite:class="disable-animation-showhide-target"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        showhidetargetvalue="true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <section2Image
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldLabel="Troika Image"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./section2Image"
                                                name="./file"
                                                mimeTypes="[image]"
                                                multiple="{Boolean}false"  
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                        </items>
                                    </section2Image>
                                </items>
                            </column>
                        </items>
                    </troikaSection2>
                    <troikaSection3
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Troika Section3"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <granite:data jcr:primaryType="nt:unstructured"
                              dep-value="3"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Enter troika title"
                                        fieldLabel="Troika Title"
                                        name="./section3Title"/>
                                   <desciption
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                        name="./section3Description"
                                        useFixedInlineToolbar="{Boolean}true">
                                        <rtePlugins
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="plweb-dsys/common/commonRTE/v1/commonRTE/cq:dialog/content/items/column/items/richText/rtePlugins"/>
                                        <uiSettings
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="plweb-dsys/common/commonRTE/v1/commonRTE/cq:dialog/content/items/column/items/richText/uiSettings"/>
                                    </desciption>
                                    <webpageName
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter link name"
                                        fieldLabel="Webpage Title"
                                        name="./section3WebpageTitle"/>
                                    <webpageTarget
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                        fieldDescription="Select path of the target page"
                                        fieldLabel="Webpage Target"
                                        name="./section3WebpageTarget"
                                        rootPath="/content"/>
                                    <webpageTabTarget
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        checked="{Boolean}false"
                                        fieldDescription="Check this checkbox to open the link in new tab."
                                        name="./section3WebpageTabTarget"
                                        text="Open Link in New Tab"
                                        value="true"/>
                                    <section3Image
                                        granite:class="disable-animation-showhide-target"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        showhidetargetvalue="true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <section3Image
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldLabel="Troika Image"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./section3Image"
                                                name="./file"
                                                mimeTypes="[image]"
                                                multiple="{Boolean}false"  
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                        </items>
                                    </section3Image>
                                </items>
                            </column>
                        </items>
                    </troikaSection3>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>

