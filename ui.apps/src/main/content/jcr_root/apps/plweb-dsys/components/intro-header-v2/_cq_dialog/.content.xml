<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="General"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs"
                        maximized="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                        <general
                                jcr:primaryType="nt:unstructured"
                                jcr:title="General"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <bgColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Background Color"
                                                name="./bgColor">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <transparent
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Transparent"
                                                        value="transparent"/>
                                                    <white
                                                        jcr:primaryType="nt:unstructured"
                                                        text="White"
                                                        value="white"/>
                                                    <light-grey
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Light Grey"
                                                        value="light-grey"/>
                                                    <dark-blue
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Dark Blue"
                                                        value="dark-blue"/>
                                                </items>
                                            </bgColor>
                                        </items>
                                    </column>
                                </items>
                            </general>
                            <listSettings
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Titles"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Leave empty to use the page title."
                                                fieldLabel="Title"
                                                name="./title"
                                                required="true"/>
                                            <titleSuperScript
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Please enter superscript for title."
                                                fieldLabel="Title Superscript (Optional)"
                                                name="./titleSuperScript"/>
                                            <defaulttypes
                                                granite:class="core-title-sizes-default"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Type / Size"
                                                name="./type">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <h1
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H1"
                                                        value="h1"/>
                                                    <h2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H2"
                                                        value="h2"/>
                                                    <h3
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H3"
                                                        value="h3"/>
                                                    <h4
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H4"
                                                        value="h4"/>
                                                    <h5
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H5"
                                                        value="h5"/>
                                                    <h6
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H6"
                                                        value="h6"/>
                                                </items>
                                            </defaulttypes>
                                            <subtitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Enter subtitle."
                                                fieldLabel="Sub title"
                                                name="./subTitle"/>
                                            <alignments
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Select Alignments"
                                                name="./alignments">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <left
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Left"
                                                        value="left"/>
                                                    <center
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Center"
                                                        value="center"/>
                                                    <right
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Right"
                                                        value="right"/>
                                                </items>
                                            </alignments>
                                            <titleColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Select Title Color"
                                                name="./titleColor">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <dark
                                                        jcr:primaryType="nt:unstructured"
                                                        text=" Dark (#474747)"
                                                        value="#474747"/>
                                                    <light
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Light (#e8f2fa)"
                                                        value="#e8f2fa"/>
                                                    <white
                                                        jcr:primaryType="nt:unstructured"
                                                        text="White"
                                                        value="#FFFFFF"/>
                                                </items>
                                            </titleColor>
                                            <subtitleColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Select Subtitle Color"
                                                name="./subtitleColor">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <dark
                                                        jcr:primaryType="nt:unstructured"
                                                        text=" Dark (#474747)"
                                                        value="#474747"/>
                                                    <light
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Light (#e8f2fa)"
                                                        value="#e8f2fa"/>
                                                    <white
                                                        jcr:primaryType="nt:unstructured"
                                                        text="White"
                                                        value="#FFFFFF"/>
                                                </items>
                                            </subtitleColor>
                                        </items>
                                    </column>
                                </items>
                            </listSettings>
                            <properties
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Primary Button"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                        margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <text
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="The text to display on the button."
                                                        fieldLabel="Text"
                                                        name="./button1text"
                                                        required="true"/>
                                                    <link
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                                                        fieldDescription="Link to a content page, external URL or page anchor."
                                                        fieldLabel="Link"
                                                        name="./button1link"/>
                                                    <linkTarget
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="Select link target"
                                                        name="./button1linkTarget">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <same
                                                                jcr:primaryType="nt:unstructured"
                                                                selected="{Boolean}true"
                                                                text="Same Tab"
                                                                value="_self"/>
                                                            <new
                                                                jcr:primaryType="nt:unstructured"
                                                                text="New Tab"
                                                                value="_blank"/>
                                                        </items>
                                                    </linkTarget>
                                                    <buttonStyle
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="Select button style"
                                                        name="./button1btnstyle">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <primary
                                                                jcr:primaryType="nt:unstructured"
                                                                selected="{Boolean}true"
                                                                text="Primary"
                                                                value="primary"/>
                                                            <secondary
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Secondary"
                                                                value="secondary"/>
                                                        </items>
                                                    </buttonStyle>
                                                    <btnPos
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="Select button position"
                                                        name="./button1btnPos">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <left
                                                                jcr:primaryType="nt:unstructured"
                                                                selected="{Boolean}true"
                                                                text="Left"
                                                                value="btn-left"/>
                                                            <center
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Center"
                                                                value="btn-center"/>
                                                            <right
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Right"
                                                                value="btn-right"/>
                                                        </items>
                                                    </btnPos>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </properties>
                            <properties2
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Secondary Button"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                        margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <text
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="The text to display on the button."
                                                        fieldLabel="Text"
                                                        name="./button2text"
                                                        required="true"/>
                                                    <link
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                                                        fieldDescription="Link to a content page, external URL or page anchor."
                                                        fieldLabel="Link"
                                                        name="./button2link"/>
                                                    <linkTarget
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="Select link target"
                                                        name="./button2linkTarget">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <same
                                                                jcr:primaryType="nt:unstructured"
                                                                selected="{Boolean}true"
                                                                text="Same Tab"
                                                                value="_self"/>
                                                            <new
                                                                jcr:primaryType="nt:unstructured"
                                                                text="New Tab"
                                                                value="_blank"/>
                                                        </items>
                                                    </linkTarget>
                                                    <buttonStyle
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="Select button style"
                                                        name="./button2btnstyle">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <primary
                                                                jcr:primaryType="nt:unstructured"
                                                                selected="{Boolean}true"
                                                                text="Primary"
                                                                value="primary"/>
                                                            <secondary
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Secondary"
                                                                value="secondary"/>
                                                        </items>
                                                    </buttonStyle>
                                                    <btnPos
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="Select button position"
                                                        name="./button2btnPos">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <left
                                                                jcr:primaryType="nt:unstructured"
                                                                selected="{Boolean}true"
                                                                text="Left"
                                                                value="btn-left"/>
                                                            <center
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Center"
                                                                value="btn-center"/>
                                                            <right
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Right"
                                                                value="btn-right"/>
                                                        </items>
                                                    </btnPos>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </properties2>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
